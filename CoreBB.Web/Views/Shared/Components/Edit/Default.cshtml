@model Topic

<div class="card border-warning p-3 mt-1">
    <div class="card-header-pills p-1">
        <h5 style="display: inline-block;">Edit</h5>
        <button type="button" class="btn btn-sm float-right cancel">X</button>
    </div>
    <form asp-action="Edit" method="post">
        @if (Model.Id == Model.RootTopicId)
        {
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
            </div>
        }
        <div class="form-group">
            <label asp-for="Content"></label>
            <textarea asp-for="Content" class="form-control" rows="5"></textarea>
        </div>
        @if (User.IsInRole(Roles.Administrator) && Model.Id == Model.RootTopicId)
        {
            <div class="form-group">
                <label asp-for="IsLocked">Locked?</label>
                <input asp-for="IsLocked" class="form-check-inline float-right" />
            </div>
        }
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ForumId" />
        <input type="hidden" asp-for="RootTopicId" />
        <input type="hidden" asp-for="ReplyToTopicId" />
        <button type="submit" class="btn btn-primary btn-sm m-1 float-right">Submit</button>
    </form>
</div>