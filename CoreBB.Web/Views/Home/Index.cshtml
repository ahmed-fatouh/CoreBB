@inject Microsoft.AspNetCore.Hosting.IHostingEnvironment hostingEnv

@{
    ViewData["Title"] = "CoreBB Home";
}

<style>
    #carousel {
        background-color: lightgrey;
    }

    .carousel-indicators li {
        background-color: black;
    }

    .carousel-item img {
        width: 500px;
        height: 300px;
    }

    #carousel a {
        background-color: black;
    }
    .carousel-caption {
        top: -15px;
        bottom: auto;
        color: gray;
    }
</style>

<div class="card border-info" style="margin-top: 60px;">
    <h5 class="card-header bg-info text-white">Introduction</h5>
    <div class="card-body">
        <h3>Welcome to CoreBB</h3>
        <p>
            CoreBB is a simple bulletin board web application written in ASP.NET Core 2.0. It is also
            the sample project of the course <strong>Program a Server-Side Application using ASP.NET Core</strong>.
            The technologies used in this course include:<br />
            <ul>
                <li>Model-View-Controller</li>
                <li>Basic Authentication</li>
                <li>Tag Helpers and HTML Helpers</li>
                <li>Entity Framework Core</li>
            </ul>
        </p>
    </div>
</div>
<br />
<div class="card border-info">
    <h5 class="card-header bg-info text-white">Technologies used</h5>
    <div class="card-body">
        <div id="carousel" class="carousel slide text-center" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
                <li data-target="#carousel" data-slide-to="1"></li>
                <li data-target="#carousel" data-slide-to="2"></li>
                <li data-target="#carousel" data-slide-to="3"></li>
            </ol>
            
            <div class="carousel-inner">
                @if (hostingEnv.EnvironmentName == "Development")
                {
                    <div class="carousel-item active">
                        <img src="~/Content/img/asp-net-core-mvc-codeOpinion.png" alt="ASP.Net Core MVC" />
                        <div class="carousel-caption d-none d-md-block">
                            <p>Image Source: codeopinion.com</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/img/entity-framework-core-codeOpinion.png" alt="Entity Framework Core" />
                        <div class="carousel-caption d-none d-md-block">
                            <p>Image Source: codeopinion.com</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/img/bootstrap-stack.png" alt="Bootstrap" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/img/jquery-medium.png" alt="jQuery" />
                    </div>
                }
                else
                {
                    <div class="carousel-item active">
                        <img src="https://codeopinion.com/wp-content/uploads/2017/06/Bitmap-MEDIUM_ASP.NET-Core-MVC-Logo_2colors_Square_Boxed_RGB.png" alt="ASP.Net Core MVC" />
                        <div class="carousel-caption d-none d-md-block">
                            <p>Image Source: codeopinion.com</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="https://codeopinion.com/wp-content/uploads/2017/10/Bitmap-MEDIUM_Entity-Framework-Core-Logo_2colors_Square_Boxed_RGB.png" alt="Entity Framework Core" />
                        <div class="carousel-caption d-none d-md-block">
                            <p>Image Source: codeopinion.com</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="https://getbootstrap.com/docs/4.1/assets/img/bootstrap-stack.png" alt="Bootstrap" />
                    </div>
                    <div class="carousel-item">
                        <img src="https://www.mojos.it/wordpress/wp-content/uploads/2013/05/jquery-logo-1024x511.png" alt="jQuery" />
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>